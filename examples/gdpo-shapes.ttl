###  https://www.ramsprinciplesofgooddesign.com/CanonicalRamsStatementGroundingShape
gdpo:CanonicalRamsStatementGroundingShape rdf:type owl:NamedIndividual ,
                                                   sh:NodeShape ;
                                          rdfs:label "Canonical Rams statement grounding shape"@en ;
                                          sh:property [ sh:message "Recommended: include dcterms:creator for canonical principle statements (e.g., Dieter Rams)."@en ;
                                                        sh:minCount 1 ;
                                                        sh:path dcterms:creator ;
                                                        sh:severity sh:Warning
                                                      ] ,
                                                      [ sh:class bfo:BFO_0000040 ;
                                                        sh:message "A canonical Rams statement (has canonical statement text) must be grounded by at least one material bearer via 'is concretized by'."@en ;
                                                        sh:minCount 1 ;
                                                        sh:path gdpo:GDPO0000464
                                                      ] ;
                                          sh:targetSubjectsOf gdpo:GDPO0000453 .


###  https://www.ramsprinciplesofgooddesign.com/DesignEvaluationRecordShape
gdpo:DesignEvaluationRecordShape rdf:type owl:NamedIndividual ,
                                          sh:NodeShape ;
                                 rdfs:label "Design evaluation record shape"@en ;
                                 sh:property [ sh:class gdpo:GDPO0000052 ;
                                               sh:maxCount 1 ;
                                               sh:message "If specified, an evaluation record should reference at most one method specification."@en ;
                                               sh:path gdpo:GDPO0000048
                                             ] ,
                                             [ sh:datatype xsd:decimal ;
                                               sh:maxCount 1 ;
                                               sh:message "Avoid attaching multiple raw 'has score' decimals to the evaluation record. Use reified score components (has score component â†’ design evaluation score) to represent multi-criterion scoring and scale semantics."@en ;
                                               sh:path gdpo:GDPO0000047 ;
                                               sh:severity sh:Warning
                                             ] ,
                                             [ sh:class gdpo:GDPO0000003 ;
                                               sh:message "A design evaluation record must specify at least one criterion via 'against principle'."@en ;
                                               sh:minCount 1 ;
                                               sh:path gdpo:GDPO0000046
                                             ] ,
                                             [ sh:datatype xsd:dateTime ;
                                               sh:maxCount 1 ;
                                               sh:message "A design evaluation record must have exactly one 'assessed on' timestamp (xsd:dateTime)."@en ;
                                               sh:minCount 1 ;
                                               sh:path gdpo:GDPO0000050
                                             ] ,
                                             [ sh:class bfo:BFO_0000040 ;
                                               sh:message "Recommended: ground the evaluation record by linking it to at least one material bearer (is concretized by)."@en ;
                                               sh:minCount 1 ;
                                               sh:path gdpo:GDPO0000464 ;
                                               sh:severity sh:Warning
                                             ] ,
                                             [ sh:class gdpo:GDPO0000456 ;
                                               sh:message "Each score component linked from an evaluation record must be a design evaluation score that satisfies the score-component constraints (criterion, scale, value)."@en ;
                                               sh:node gdpo:DesignEvaluationScoreShape ;
                                               sh:path gdpo:GDPO0000457
                                             ] ,
                                             [ sh:class gdpo:GDPO0000055 ;
                                               sh:maxCount 1 ;
                                               sh:message "Recommended: link the evaluation record to the evaluation process that produced it (is evaluation record output of)."@en ;
                                               sh:path gdpo:GDPO0000462 ;
                                               sh:severity sh:Warning
                                             ] ,
                                             [ sh:class bfo:BFO_0000040 ;
                                               sh:maxCount 1 ;
                                               sh:message "A design evaluation record must be about exactly one evaluated artifact (material entity)."@en ;
                                               sh:minCount 1 ;
                                               sh:path gdpo:GDPO0000045
                                             ] ;
                                 sh:targetClass gdpo:GDPO0000044 .


###  https://www.ramsprinciplesofgooddesign.com/DesignEvaluationScoreShape
gdpo:DesignEvaluationScoreShape rdf:type owl:NamedIndividual ,
                                         sh:NodeShape ;
                                rdfs:label "Design evaluation score shape"@en ;
                                sh:property [ sh:class gdpo:GDPO0000003 ;
                                              sh:maxCount 1 ;
                                              sh:message "A design evaluation score must be linked to exactly one criterion principle (score for principle)."@en ;
                                              sh:minCount 1 ;
                                              sh:path gdpo:GDPO0000458
                                            ] ,
                                            [ sh:class gdpo:GDPO0000461 ;
                                              sh:maxCount 1 ;
                                              sh:message "A design evaluation score must have exactly one score scale specification (has score scale)."@en ;
                                              sh:minCount 1 ;
                                              sh:path gdpo:GDPO0000460
                                            ] ,
                                            [ sh:datatype xsd:decimal ;
                                              sh:maxCount 1 ;
                                              sh:message "A design evaluation score must have exactly one numeric score value (xsd:decimal)."@en ;
                                              sh:minCount 1 ;
                                              sh:path gdpo:GDPO0000459
                                            ] ,
                                            [ sh:class gdpo:GDPO0000044 ;
                                              sh:maxCount 1 ;
                                              sh:message "Recommended: a score component should be linked from exactly one evaluation record (inverse of has score component)."@en ;
                                              sh:minCount 1 ;
                                              sh:path [ sh:inversePath gdpo:GDPO0000457
                                                      ] ;
                                              sh:severity sh:Warning
                                            ] ;
                                sh:targetClass gdpo:GDPO0000456 .


###  https://www.ramsprinciplesofgooddesign.com/EvaluationScoreScaleSpecificationShape
gdpo:EvaluationScoreScaleSpecificationShape rdf:type owl:NamedIndividual ,
                                                     sh:NodeShape ;
                                            rdfs:label "Evaluation score scale specification shape"@en ;
                                            sh:property [ sh:message "Recommended: provide a skos:definition describing how values on this scale are interpreted (e.g., bounds, type, meaning)."@en ;
                                                          sh:minCount 1 ;
                                                          sh:path skos:definition ;
                                                          sh:severity sh:Warning
                                                        ] ;
                                            sh:targetClass gdpo:GDPO0000461 .


